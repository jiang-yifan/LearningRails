

<form  action="<%= session_url %>" method="post" class="form-horizontal">
  <input type="hidden" name="authenticity_token"
  value="<%= form_authenticity_token %>">

  <div class="form-group">
    <label for="user_email"
    class ="col-md-2 control-label">Email:</label>
    <div class="col-md-6">
      <input type="text" id= "user_email" name="user[email]" value="<%= @user.email %>">
    </div>
  </div>
  <br>
  <div class= "form-group">
    <label for="user_password"
    class= "col-md-2 control-label">Password: </label>
    <div class="col-md-6">
      <input type="password" class= "form-control"
      id= "user_password" name="user[password]">
    </div>
  </div>

  <br>

  <div class="form-group">
    <div class ="col-md-6 col-md-offset-2">
      <button type="submit" class="btn btn-default">Sign In!</button>
    </div>
  </div>
</form>
